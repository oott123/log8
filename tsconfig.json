{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "lib": ["es2015"],
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "outDir": "./dist"
  },
  "include": [
    "./src"
  ],
  "exclude": ["node_modules", "dist"]
}
